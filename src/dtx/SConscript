"""Build dtx library"""


def scons():
    """Execute build"""
    Import('env')

    env.AppendUnique(LIBPATH=[Dir('.')])

    if not env.d_server_requested():
        return

    denv = env.Clone()

    denv.d_add_requires('argobots', 'protobufc', 'hwloc')
    denv.d_add_requires('pmdk', headers_only=True)

    denv.Append(CPPDEFINES=['-DDAOS_PMEM_BUILD'])
    dtx = denv.d_library('dtx',
                         ['dtx_srv.c', 'dtx_rpc.c', 'dtx_resync.c', 'dtx_common.c', 'dtx_cos.c'],
                         install_off="../..")
    denv.Install('$PREFIX/lib64/daos_srv', dtx)


if __name__ == "SCons.Script":
    scons()
