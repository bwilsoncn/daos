"""Build Per-server Metadata"""


def scons():
    """Execute build"""
    Import('env', 'prereqs')

    denv = env.Clone()
    denv.Append(CPPDEFINES=['-DDAOS_PMEM_BUILD'])
    denv.d_add_requires('pmdk', 'argobots')

    denv.d_static_library('smd', ['smd_device.c', 'smd_pool.c', 'smd_store.c'], LIBS=[])

    if prereqs.test_requested():
        SConscript('tests/SConscript', exports='denv')


if __name__ == "SCons.Script":
    scons()
